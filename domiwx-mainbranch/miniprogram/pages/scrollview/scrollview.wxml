<!-- 个人信息 -->
<view class="bgimg" 
      style="width:100%;height:160px;background-image:url({{upimgurl}});">
      <view class="shadow" 
            style="position:fixed;margin-left:5%;background-color:#fff;width:90%;height:125px;margin-top:70rpx;border-radius:50rpx;">
        <view class="userinfo" style="position:fixed;margin-left:120rpx;margin-top:10%;">
            <view class="userinfo-avatar" 
                  style="width:140rpx;height:70px;">
              <open-data type="userAvatarUrl"></open-data>
            </view> 
            <view>
              <view class="text" style="color:#000;font-weight:700;margin-left:30%;margin-top:22%;width:200rpx;">
                  <open-data type="userNickName"></open-data>
              </view>
              <view class="text" style="font-weight:700;margin-left:30%;margin-top:10%;width:200rpx;">
                  <view style="display:flex">
                  <open-data type="userCity"></open-data>
                    <view>,</view>
                  <open-data type="userProvince"></open-data>
                  </view>   
              </view> 
          </view>
        </view>
      </view>
</view>

<!-- 项目列表 -->
<view style="margin-left:5%;margin-top:40px;position:fixed;width:90%;">
  <view class='pullmask' hidden='{{!isTop}}'></view>
  <scroll-view scroll-y="auto" 
              scroll-top="{{topNum}}" 
              style="height: {{wH}}px" 
              bindscrolltolower="loadmore" 
              bindscroll="doScrollTop">
    
  </scroll-view>
</view>




      