<view class="bgimg" 
      style="width:100%;height:320rpx;background-image:url({{upimgurl}});">
      <view class="shadow" 
            style="position:fixed;margin-left:5%;background-color:#fff;width:90%;height:250rpx;margin-top:70rpx;border-radius:50rpx;">
        <view class="userinfo" style="position:fixed;margin-left:120rpx;margin-top:10%;">
          <view class="userinfo-avatar" 
                style="width:140rpx;height:140rpx;">
            <open-data type="userAvatarUrl"></open-data>
          </view> 
          <view>
            <view class="text" style="color:#000;font-weight:700;margin-left:30%;margin-top:22%;width:200rpx;">
                <open-data type="userNickName"></open-data>
            </view>
            <view class="text" style="font-weight:700;margin-left:30%;margin-top:10%;width:200rpx;">
                <view style="display:flex">
                 <open-data type="userCity"></open-data>
                  <view>,</view>
                <open-data type="userProvince"></open-data>
                </view>   
            </view> 
          </view>
        </view>
      </view>
</view>


<view style="margin-left:5%;margin-top:10%;position:fixed;width:90%;">

  <!--您的姓名-->
  <view class="shadow2 {{topicerror==true?'errorcss':''}}" 
        style="margin-bottom:7%;border-radius:10rpx;height:120rpx">
    <view style="display:flex;">
    
      <image style="margin-left:22rpx;width:45rpx;height:50rpx;margin-right:4%;margin-top:50rpx;"
            src="{{registarray[0].iconurl}}"
            mode="aspectfit"
      >
      </image>
      
      <view class="text" 
            style="color:#000;line-height:400%;font-size:30rpx;width:50%;margin-top:44rpx;margin-left:-13rpx;"
      >
        <input placeholder='{{registarray[0].name}}' 
              placeholder-class="placeholder" 
              style="width:360rpx;
              class="placeholder"
              bindblur="inputlosefocus"
              id="0"
              maxlength='10'
              type='text'
              >
        </input>
      </view>
    </view>
  </view>

  <!-- 您的手机号 -->
  <view style="display:flex">
    <view class="shadow2 {{phoneerror==true?'errorcss':''}}" 
    style="{{checkcode.enablebtn==true?'background-color:#fff;':'background-color:#c1c0bd;'}} margin-bottom:10%;border-radius:10rpx;width:70%;height:120rpx">
      <view style="display:flex;">
      
        <image style="margin-left:22rpx;width:40rpx;height:45rpx;margin-right:4%;margin-top:50rpx;"
              src="{{registarray[1].iconurl}}"
              mode="aspectfit"
        >
        </image>
       
        <view class="text" 
              style="color:#000;line-height:400%;font-size:30rpx;width:50%;margin-top:44rpx;margin-left:-13rpx;"
        >
          <input placeholder='{{registarray[1].name}}' 
                placeholder-class="placeholder" 
                disabled="{{checkcode.enablebtn==true?false:true}}"
                style="width:250rpx"
                class="placeholder"
                bindblur="inputlosefocus"
                id="1"
                maxlength='11'
                type='number'
                >
          </input>
        </view>    
      </view>
    </view>

    <view>
      <button  
          disabled="{{checkcode.enablebtn==true?false:true}}"
          style="{{checkcode.enablebtn==true?'background-color:#3a9bf8;':'background-color:#767572;'}}margin-left:15%;width:180rpx;height:120rpx;" 
          bindtap="tapcheckcode">
          <view class="text" style="color:#fff;line-height:500%;">{{checkcode.s1}}</view>
      </button>
    </view>

  </view>

  <!-- 您的验证码 -->
  <view class="shadow2 {{verifycodeerror==true?'errorcss':''}}" 
          style="margin-bottom:10%;border-radius:10rpx;width:100%;height:120rpx">
      <view style="display:flex;">
      
        <image style="margin-left:22rpx;width:40rpx;height:45rpx;margin-right:4%;margin-top:50rpx;"
              src="{{registarray[2].iconurl}}"
              mode="aspectfit"
        >
        </image>
       
        <view class="text" 
              style="color:#000;line-height:400%;font-size:30rpx;width:50%;margin-top:44rpx;margin-left:-13rpx;"
        >
          <input placeholder='{{registarray[2].name}}' 
                placeholder-class="placeholder" 
                style="width:150rpx"
                class="placeholder"
                bindblur='inputlosefocus'
                id="2"
                maxlength='6'
                type='number'
                >
          </input>
        </view>
      
        
      </view>
  </view>


</view>


<button class="shadow2" 
        
        style="line-height:80rpx;background-color:#2aba00;color:#fff;position:fixed;bottom:20rpx;;width:240rpx;height:80rpx;margin-left:32%;" 
        bindtap="postrequest">
    确定
</button>
